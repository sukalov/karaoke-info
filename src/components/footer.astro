---
import { Icon } from "astro-icon/components";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://t.me/povsemmestam",
    description: "канал в телеграме",
    icon: "mdi:telegram",
  },
  {
    url: "https://instagram.com/via_na_prazdnik",
    description: "инстаграм ансамбля",
    icon: "fa-brands:instagram",
  },
  {
    url: "https://astro.build/chat",
    description: "Astro on Discord",
    icon: "fa-brands:discord",
  },
  {
    url: "https://twitter.com/astrodotbuild",
    description: "Astro on Twitter",
    icon: "fa-brands:twitter",
  },
];
---

<footer
  class="relative mx-6 flex h-52 items-center justify-center rounded-3xl bg-stone-950 sm:h-36"
>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4 sm:gap-8">
    {
      links.map((link) => (
        <li>
          <a
            class="flex size-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="size-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>

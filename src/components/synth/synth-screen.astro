<Fragment>
  <g id="synth-screen" transform="translate(0.000000, 4.000000)">
    <g class="synth-instruments">
      <g class="synth-instrument">
        <rect
          class="hitarea"
          fill-opacity="0"
          x="0"
          y="0"
          width="44"
          height="40"></rect>
        <g
          id="piano"
          class="instrument"
          transform="translate(6.000000, 2.000000)"
        >
        </g>
      </g>
    </g>
  </g>
</Fragment>

<style lang="scss">
  @keyframes press-start {
    0%,
    20% {
      transform: translateY(-10%);
    }

    100% {
      transform: translateY(0);
    }
  }

  .lcd-bg {
    fill: var(--synth-lcd-bg);
    stroke: var(--synth-stroke);
    stroke-width: 2px;
    vector-effect: non-scaling-stroke;
  }

  .lcd-highlight {
    fill: var(--synth-lcd-light);
  }

  .lcd-base {
    fill: var(--synth-lcd-medium);
  }

  .notehead,
  .synth-instrument .lcd-base {
    fill: var(--synth-lcd-dark);
  }

  // Start button
  .start {
    cursor: pointer;

    :global([data-enabled="true"]) & {
      display: none;
    }

    .lcd-base {
      fill: var(--synth-lcd-dark);
    }

    &:hover .lcd-base {
      animation: press-start 1s step-start infinite;

      &:nth-child(2) {
        animation-delay: 0.1s;
      }

      &:nth-child(3) {
        animation-delay: 0.2s;
      }

      &:nth-child(4) {
        animation-delay: 0.3s;
      }

      &:nth-child(5) {
        animation-delay: 0.4s;
      }
    }
  }

  .synth-randomize {
    display: none;

    :global([data-loading="true"]) & {
      display: none;
    }

    @media all and (pointer: coarse) {
      display: none;
    }
  }

  @media not all and (pointer: coarse) {
    .synth-instrument:hover .instrument {
      display: none;
    }

    .synth-randomize .synth-instrument:hover {
      display: block;
    }

    .instrument-arrow:hover .lcd-base {
      fill: var(--synth-lcd-dark);
    }
  }

  // Default hidden state, overridden in JS
  .instrument,
  .notehead {
    display: none;
  }

  .synth-instruments,
  .synth-staff {
    :global([data-enabled="false"]) & {
      display: none;
    }
  }

  .instrument-arrow {
    cursor: pointer;
  }
</style>
